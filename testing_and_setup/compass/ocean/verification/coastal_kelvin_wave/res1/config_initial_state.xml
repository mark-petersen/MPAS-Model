<?xml version="1.0"?>
<config case="initial_state">

	<add_link source="../base_mesh/base_mesh.nc" dest="base_mesh.nc"/>
    <add_link source="../base_mesh/graph.info" dest="graph.info"/>

    <namelist name="namelist.ocean" mode="init">
		<template file="template_initial_state.xml" path_base="script_resolution_dir"/>
    </namelist>

    <streams name="streams.ocean" keep="immutable" mode="init">
        <template file="template_initial_state.xml" path_base="script_configuration_dir"/>
    </streams>

    <run_script name="run.py">
        <step executable="gpmetis">
            <argument flag="graph.info">4</argument>
        </step>
        <model_run procs="1" threads="1" namelist="namelist.ocean" streams="streams.ocean"/>
    </run_script>

</config>

