<template>
	<namelist>
		<option name="config_run_duration">'00-00-00_01:00:00'</option>
		<option name="config_write_output_on_startup">.true.</option>
		<option name="config_time_integrator">'RK4'</option>
	</namelist>
	<streams name="streams.ocean" keep="immutable" mode="forward">
		<stream name="mesh">
			<attribute name="filename_template">initial_state.nc</attribute>
		</stream>
		<stream name="input">
			<attribute name="filename_template">initial_state.nc</attribute>
		</stream>
		<template file="output.xml" path_base="script_core_dir" path="templates/streams"/>
		<stream name="output">
			<attribute name="output_interval">00-00-00_00:30:00</attribute>
			<attribute name="filename_template">output.nc</attribute>
			<add_contents>
				<member type="var" name="sshSolution"/>
				<member type="var" name="normalVelocitySolution"/>
				<member type="var" name="velocityZonalSolution"/>
				<member type="var" name="velocityMeridionalSolution"/>
			</add_contents>
		</stream>
		<stream name="restart">
			<attribute name="output_interval">none</attribute>
			<attribute name="filename_template">restart.nc</attribute>
		</stream>

	</streams>
</template>
